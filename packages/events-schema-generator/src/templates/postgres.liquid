model {{ contract_name }} {
    id      Int    @id @default(autoincrement())
    address String
    chainId Int
    transactionHash String

    deploymentBlock  Int
    indexedTillBlock Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    {% for event in events %}
    {{-event.name}} {{event.name-}}[]
    {% endfor %}
}   

{% for event in events %}
model {{event.name}} {
    id      Int    @id @default(autoincrement())
    {{contract_name}} {{contract_name}} @relation(fields: [{{contract_name}}Id], references: [id])
    {{contract_name}}Id Int

    block   Int
    transactionHash String
    logIndex Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    data {{event.name-}}Event?
}

model {{event.name}}Event {
    id      Int    @id @default(autoincrement())
    {{event.name}} {{event.name}} @relation(fields: [{{event.name}}Id], references: [id])
    {{event.name}}Id Int @unique
    {% for arg in event.inputs %}
    {{-arg.name}} String
    {% endfor %}
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

{% endfor %}
