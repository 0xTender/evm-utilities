      ],
      "@0xtender/heisenberg-cli": ["packages/heisenberg-cli/src/index.ts"],
      "@0xtender/evm-helpers": ["packages/evm-helpers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
